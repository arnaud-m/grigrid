#--------------------------------------------------------------------
# Setup Global Variables
#--------------------------------------------------------------------
PROG=`basename $0 .sh`

RESULTS=results
GRIDREPORT='../bin/solver_report'

#Options
DEPTH=1

#--------------------------------------------------------------------
# Version/Help Messages
#--------------------------------------------------------------------

version() {
cat <<EOF
$PROG 0.2
     
Copyright (C) 2013 Arnaud Malapert (UNS CNRS).

License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>.

EOF
}

help() {
cat <<EOF
$0 summarizes results of jobs (files .o) of the directories $RESULTS. \
$0 generate three files for each directory BENCH (explored recursivly).
A file BENCH.res summarizes all results.     

The results file (.res) is formatted as follows.   
Each line represents an entry, i.e. the resolution of an instance by an algorithm, with the exception of the first line which contain the column labels.
An entry has a fixed number of columns delimited by '|' (pretty print).  

The first column of the table is always the instance name.
The following columns are defined by the key file.
  
Usage: $0 [OPTION]... 
     
Options:
   -k FILE        extract results files (.res) using the key file argument.
   -s                 extract solution files (.sol)  
   -d DEPTH    a file is generated for each subdirectory at the given depth (default 1) 
  
  -z        compress all files  
  
  -h        display this help and exit
  -v       output version information and exit
   
Report bugs to <arnaud (dot) malapert (at) unice (dot) com>."
EOF
}
#--------------------------------------------------------------------
# Test for prerequisites
#--------------------------------------------------------------------

while getopts ":k:d:szhv" opt; do
    case $opt in
        k)
            KEYS=$OPTARG
            ;;
        d)
            DEPTH=$OPTARG
            ;;
        s) 
            SOL=1
            ;;
        z) 
            ZIP=1
            ;;
        h)
            help 
            exit 0
            ;;
        v)
            version;
            exit 0
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit 1
            ;;
        :)
            echo "Option -$OPTARG requires an argument." >&2
            exit 1
            ;;
    esac
done


if [ -r "$KEYS" ] ; then
    REPORT_CMD="$GRIDREPORT -k $KEYS"
elif  [ -z "$SOL" ]; then
    echo "At least one option  -k or -s is required." >&2
    exit 1
fi


find $RESULTS -mindepth $DEPTH  -maxdepth $DEPTH -type d -print0 | while read -d $'\0' RESDIR
do
    if [ -n "$REPORT_CMD" ] ;then
        find $RESDIR  -type f -name '*.o'  -print0 | xargs -0 $REPORT_CMD  -o $RESDIR'.res' -i 
    fi
    if [ -n "$SOL" ] ; then
        find $RESDIR  -type f -name '*.o'  -print0 | xargs -0 grep -rh "v "  | sed 's/^.\{2\}//' > $RESDIR.sol
    fi
done

if [ -n "$REPORT_CMD" ] ;then
    find $RESULTS  -maxdepth $DEPTH -type f -name '*.o'  -print0 | xargs -0 $REPORT_CMD  -o $RESULTS/$RESULTS.res -i 
fi

if [ -n "$SOL" ] ; then
    find $RESULTS  -maxdepth $DEPTH -type f -name '*.o'  -print0 | xargs -0 grep -rh "v "  | sed 's/^.\{2\}//' > $RESULTS/$RESULTS.sol
fi


if [ $ZIP ] ; then
    tar czf $RESULTS.tar.gz $RESULTS/*
fi




