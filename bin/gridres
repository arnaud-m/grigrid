#--------------------------------------------------------------------
# Setup Global Variables
#--------------------------------------------------------------------
PROG=`basename $0 .sh`

RESULTS=results
DEPTH=1
KEYS=../keys/keys.txt
GRIDREPORT='../bin/solver_report'
#--------------------------------------------------------------------
# Version/Help Messages
#--------------------------------------------------------------------

version() {
cat <<EOF
$PROG 0.2
     
Copyright (C) 2011 Arnaud Malapert (UNS CNRS).

License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>.

EOF
}

help() {
cat <<EOF
$0 summarizes results of jobs (files .o) of the directories $RESULTS. \
$0 generate three files for each directory BENCH (explored recursivly).
A file BENCH.res summarizes all results.     

The results file (.res) is formatted as follows.   
Each line represents an entry, i.e. the resolution of an instance by an algorithm, with the exception of the first line which contain the column labels.
An entry has a fixed number of columns delimited by '|' (pretty print).  

The first column of the table is always the instance name.
The following columns are defined by the key file (default: $KEYS).
  
Usage: $0 -k FILE [OPTION]... 
     
Options:
   -k FILE        file with keys associated to the columns of the table (required).
   -d DEPTH    a .res file is generated for each subdirectory at the given depth (default 1. 
   
  -o        compress .o files  
  -r        compress .res files  
  -u       search for uncategorized .res files  
  
  -h        display this help and exit
  -v       output version information and exit
   
Report bugs to <arnaud (dot) malapert (at) unice (dot) com>."
EOF
}
#--------------------------------------------------------------------
# Test for prerequisites
#--------------------------------------------------------------------

while getopts ":k:d:oruhv" opt; do
    case $opt in
        k)
            KEYS=$OPTARG
            ;;
        d)
            DEPTH=$OPTARG
            ;;
        o) 
            OZIP=1
            ;;
        r) 
            RZIP=1
            ;;
        u) 
            NOCAT=1
            ;;
        h)
            help 
            exit 0
            ;;
        v)
            version;
            exit 0
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit 1
            ;;
        :)
            echo "Option -$OPTARG requires an argument." >&2
            exit 1
            ;;
    esac
done

if [ ! $KEYS ] ; then
    echo "Option -k is required." >&2
    exit 1
    
fi

REPORT_CMD="$GRIDREPORT -k $KEYS"

find $RESULTS -mindepth $DEPTH  -maxdepth $DEPTH -type d -print0 | while read -d $'\0' RESDIR
do
    RESFILE=$RESDIR'.res'
    find $RESDIR  -type f -name '*.o'  -print0 | xargs -0 $REPORT_CMD  -o $RESFILE -i 
done

if [ $NOCAT ] ; then
    find $RESULTS  -maxdepth $DEPTH -type f -name '*.o'  -print0 | xargs -0 $REPORT_CMD  -o $RESULTS/uncategorized.res -i 
fi

##TODO sort .res lines

if [ $OZIP ] ; then
    echo "compress files .o ..."
    find $RESULTS/* -name '*.o' -print0 | xargs -0 tar czf o-files.tar.gz 
fi

if [ $RZIP ] ; then
    echo "compress files .res ..."
    find $RESULTS/* -name '*.res' -print0 | xargs -0 tar czf res-files.tar.gz 
fi




