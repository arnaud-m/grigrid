#--------------------------------------------------------------------
# Setup Global Variables
#--------------------------------------------------------------------
PROG=`basename $0 .sh`

RESULTS=results
GRIDREPORT='solver_report'

DEPTH=1

#--------------------------------------------------------------------
# Version/Help Messages
#--------------------------------------------------------------------

version() {
cat <<EOF
$PROG 0.2
     
Copyright (C) 2013 Arnaud Malapert (UNS CNRS).

License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>.

EOF
}

help() {
cat <<EOF
$0 summarizes results of jobs (files .o) of the directory '$RESULTS'. \
$0 can generate two files for each directory BENCH (explored recursivly).

A file BENCH.res summarizes all results formatted as follows.   
Each line represents an entry, i.e. the resolution of an instance by an algorithm, with the exception of the first line which contain the column labels.
An entry has a fixed number of columns delimited by '|' (pretty print). The first column of the table is always the instance name. The following columns are defined by the keys.

A file BENCH.sol contains all solutions.  

Usage: $0 [OPTION]... 
     
Options:
   -k FILE        extract results files (.res) using keys in FILE
   -K             extract results files (.res) using default keys
   -s             extract solution files (.sol)  
   -d DEPTH       agregation of all results for each subdirectory at the given depth (default 1) 
  
  -z        compress all files of '$RESULTS'  
  
  -h       display this help and exit
  -v       output version information and exit
   
Report bugs to <arnaud (dot) malapert (at) unice (dot) fr>.
EOF
}
#--------------------------------------------------------------------
# Test for prerequisites
#--------------------------------------------------------------------

while getopts ":k:d:Kszhv" opt; do
    case $opt in
        k)
            KEY=1
            KEYS=$OPTARG
            ;;
        d)
            DEPTH=$OPTARG
            ;;
        K)
            KEY=1
            ;;
        s) 
            SOL=1
            ;;
        z) 
            ZIP=1
            ;;
        h)
            help 
            exit 0
            ;;
        v)
            version;
            exit 0
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit 1
            ;;
        :)
            echo "Option -$OPTARG requires an argument." >&2
            exit 1
            ;;
    esac
done

if [ ! $KEY$SOL$ZIP ] ; then
     echo "$0 : Nothing to do." >&2
     exit 0
fi

if [ $KEY ] ; then
    if [ $KEYS ] ; then
        REPORT_CMD="$GRIDREPORT -k $KEYS"
    else 
        REPORT_CMD="$GRIDREPORT"
    fi
fi

TEMPFILE=`mktemp`
find $RESULTS -mindepth $DEPTH  -maxdepth $DEPTH -type d -print0 | while read -d $'\0' RESDIR
do
    if [ $KEY ] ;then
        find $RESDIR  -type f -name '*.o'  -print0 | xargs -0 $REPORT_CMD  -o $TEMPFILE -i
        (head -n 1 $TEMPFILE && tail -n +2 $TEMPFILE | sort -b) > $RESDIR'.res'
    fi
    if [ $SOL ] ; then
        find $RESDIR  -type f -name '*.o'  -print0 | xargs -r -0 grep -rh "v "  | sed 's/^.\{2\}//' > $RESDIR.sol
    fi
done

if [ $KEY ] ;then
    find $RESULTS  -maxdepth $DEPTH -type f -name '*.o'  -print0 | xargs -0 $REPORT_CMD  -o $TEMPFILE -i 
    (head -n 1 $TEMPFILE && tail -n +2 $TEMPFILE | sort -b) > $RESULTS/$RESULTS'.res'
fi

if [ $SOL ] ; then
    find $RESULTS  -maxdepth $DEPTH -type f -name '*.o'  -print0 | xargs -r -0 grep -rh "v "  | sed 's/^.\{2\}//' > $RESULTS/$RESULTS.sol
fi


if [ $ZIP ] ; then
    tar czf $RESULTS.tar.gz $RESULTS/*
fi




