PROG=`basename $0 .sh`
version() {

    echo  "$PROG 0.1
     
Copyright (C) 2011 Arnaud Malapert.
License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>.
This  is free software: you are free to change and redistribute it.  There is NO WARRANTY, to the extent permitted by law."
}

help() {
echo "$PROG deploys a benchmark for a java solver in the current directory.
The directory DIR describes the structure of the benchmark.
The directory 'instances' contains all benchmark instances.
A set of properties file describes the different configurations of the solver.
A jar file contains an executable solver which accepts at least two parameters : -p property ; -f file. 
The deploiement occurs only when the filename of an instance matches the regular expression PATTERN. 

Usage: $PROG [OPTION]... DIR PATTERN...
     
Options:
  --help        display this help and exit
  --version     output version information and exit
     
Examples:
$PROG ./ '*.txt' 
     
Report bugs to <malapert (at) i3s (dot) unice (dot) fr>."
}

#--------------------------------------------------------------------
# Setup Global Variables
#--------------------------------------------------------------------

INST="./instances" #the sub-directory of $DIR which contains all instance files
JAVA_OPTIONS="-server -Xms512m -Xmx1024m"
SOLVER_OPTIONS="-v QUIET"
#--------------------------------------------------------------------
# Test for prerequisites
#--------------------------------------------------------------------

if [ $# -eq 0 ] ||  [ $1 = "--help" ]; then
    help
    exit 0
elif [ $1 = "--version" ]; then
    version
    exit 0
elif  [ $1 = "-h" ] || [ $1 = "--headless" ] ; then
JAVA_OPTIONS="$JAVA_OPTIONS -Djava.awt.headless=true"
shift;
fi 

if [ $# -lt 2 ] ; then
    help
    exit 1;
fi


#--------------------------------------------------------------------
# Do something
#--------------------------------------------------------------------

if [  -d $1 ]; then
    DIR=$1;
    cd $DIR;
    shift;
    if [ -d $INST ]; then
	JAR=`ls *.jar` #a single jar file
	for PROP in `ls *.properties`; do
	    CDIR=${PROP/%.properties/} #remove the extension
	    gridbench $INST $CDIR $PROP $JAR #create benchmark directories
	    for PATTERN in "$@" ; do 
	    gridjobs $CDIR "$PATTERN" "java $JAVA_OPTIONS  -jar $JAR   $SOLVER_OPTIONS -p $PROP -f {}" #create benchmarking shell scripts
	    done
	done
    else
	echo "$INST is not a directory."
    fi
else
    echo "$1 is not a directory."
fi


